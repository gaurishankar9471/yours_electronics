<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cccccc"
    tools:context=".ChatActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/chat_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/chat_tb_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_white_24dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person_black_24dp"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/chat_tb_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/chat_tb_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online"/>
        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/message_list_rc_view"
        android:layout_width="match_parent"
        android:layout_above="@+id/send_Linear_L"
        android:layout_below="@+id/chat_toolbar"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/send_Linear_L"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:background="@color/colorWhite"
        android:layout_alignParentBottom="true">
      <ImageButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:alpha="0.7"
          android:background="@null"
          android:layout_weight="1"
          android:src="@drawable/ic_action_add"/>

        <EditText
            android:id="@+id/message_send_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@null"
            android:hint="Enter Your Message"
            android:paddingBottom="12dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="16dp" />
        
        <ImageButton
            android:id="@+id/send_live_message_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_send"
            android:padding="10dp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:background="@null"/>
    </LinearLayout>





</RelativeLayout>