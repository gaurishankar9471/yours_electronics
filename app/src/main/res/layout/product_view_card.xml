<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_person_black_24dp" />

        <TextView
            android:id="@+id/product_title"
            android:layout_width="200dp"
            android:layout_below="@+id/product_img"
            android:padding="5dp"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_centerHorizontal="true"
            android:text="Product Title"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/product_desc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_below="@+id/product_title"
            android:layout_centerHorizontal="true"
            android:text="Product Title"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_desc"
            android:paddingStart="5dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_off_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sell Price"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:layout_marginEnd="5dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_real_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginEnd="5dp"
                android:text="Real Price" />

            <TextView
                android:id="@+id/product_discount_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:text="52" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="5dp"
                android:text="% off" />

        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>