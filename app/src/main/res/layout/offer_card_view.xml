<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/offer_card_img"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <TextView
            android:id="@+id/offer_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Title"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/offer_card_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="13sp"
            android:padding="3dp"
            android:text="Product Desc"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_desc"
            android:paddingStart="5dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_off_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sell Price"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:layout_marginEnd="5dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_real_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginEnd="5dp"
                android:text="Real Price" />

            <TextView
                android:id="@+id/product_discount_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="5dp"
                android:text="52% off" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sale Ends in : "/>

            <TextView
                android:id="@+id/offer_card_timeout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2:30:45"
                android:textColor="#FF0000"
                android:textSize="16dp" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>