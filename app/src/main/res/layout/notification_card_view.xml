<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="44dp"
                android:padding="10dp"
                android:text="Notification"
                android:textColor="@color/colorBlack"
                android:textSize="17sp"
                android:maxLines="1"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/notification_close_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="7dp"
                android:src="@drawable/ic_close_black_24dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/notification_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@color/common_google_signin_btn_text_dark_default" />

            <TextView
                android:id="@+id/notification_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="4-Inside onCreate() of your activity registerForRemoteNotifications and set CustomHandler class to receive incoming data"
                android:textSize="15sp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="7dp"
                android:textSize="14dp"
                android:textColor="@color/colorPrimary"
                android:text="Time"/>


        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>