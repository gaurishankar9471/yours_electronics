<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddressFillUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="10dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/pd_bc"
        android:orientation="vertical">



    <LinearLayout
        android:id="@+id/linr1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:weightSum="1"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:baselineAligned="false"
            android:layout_weight="0.3"
            android:padding="5dp"
            android:textColorHint="@color/colorWhite">

            <EditText
                android:id="@+id/editFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@null"
                android:ems="10"
                android:hint="First Name"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:inputType="textPersonName"
                android:textSize="17sp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:layout_marginStart="10dp"
            android:layout_weight="0.7"
            android:textColorHint="@color/colorWhite"
            android:padding="5dp">

            <EditText
                android:id="@+id/editLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:background="@null"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Last Name"
                android:textColor="@color/colorWhite"
                android:inputType="textPersonName"
                android:selectAllOnFocus="false"
                android:textColorHint="@color/colorWhite"
                android:singleLine="false" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/in_fa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/button_shape"
        android:textColorHint="@color/colorWhite">
        <EditText
            android:id="@+id/editFullAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3"
            android:background="@null"
            android:textSize="17sp"
            android:layout_margin="10dp"
            android:textColor="@color/colorWhite"
            android:ems="10"
            android:hint="Enter Full Address"
            android:inputType="textMultiLine" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/linr2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="1"
        android:orientation="horizontal">
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="0.4"
            android:textColorHint="@color/colorWhite"
            android:background="@drawable/button_shape">

            <EditText
                android:id="@+id/editPinCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@null"
                android:ems="10"
                android:textColor="@color/colorWhite"                android:hint="Pin Code"
                android:inputType="text|number" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:layout_weight="0.6"
            android:textColorHint="@color/colorWhite"
            android:background="@drawable/button_shape">

            <EditText
                android:id="@+id/editState"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_margin="10dp"
                android:textColor="@color/colorWhite"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:hint="State"
                android:inputType="textPersonName" />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:padding="5dp"
        android:textColorHint="@color/colorWhite"
        android:background="@drawable/button_shape"
        android:layout_below="@id/linr2"
        android:id="@+id/i_ph">
        <EditText
            android:id="@+id/editMobileNo_Address"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/colorWhite"
            android:ems="10"
            android:hint="Enter Phone Number"
            android:inputType="phone" />

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/save_add_btn"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/colorAccent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="Save Address"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="17sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


    </LinearLayout>

    </android.support.v7.widget.CardView>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>